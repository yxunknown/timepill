/* pages/store/store.wxss */
.store-list {
  width: 100%;
  overflow: hidden;
}
.pill-item {
  width: 96%;
  height: 60px;
  margin-left: 2%;
  margin-top: 10px;
  overflow: hidden;
}
.pill-item:last-child {
  margin-bottom: 20px;
}
.card {
  border-radius: 2px;
  overflow: hidden;
  box-shadow: 0 1px 3px rgba(26,26,26,.1);
}
.pill-outter {
  width: 20px;
  height: 35px;
  border-radius: 20px;
  overflow: hidden;
  float: left;
  margin-top: 10px;
  margin-left: 10px;
  border: 1px #21212148 solid;
}
.pill-bg {
  width: 20px;
  height: 19px;
  margin-top: 16px;
  background-color: salmon;
}

.pill-item-info {
  margin-left: 10px;
  height: 50px;
  margin-top: 5px;
  float: left;
}
.pill-item-name {
  font-size: 18px;
  font-weight: bold;
  color: orangered;
}
.pill-item-desc {
  font-size: 12px;
  color: #212121a6;
}
.pill-item-price {
  color: orangered;
  font-weight: bolder;
}
.pill-img {
  height: 60px;
  width: 96%;
  overflow: hidden;
  z-index: -100;
  position: absolute;
  left: 2%;
  opacity: 0.4;
}