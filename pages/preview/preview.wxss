/* pages/preview/preview.wxss */
.preview {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.title {
  font-size: 30px;
  font-weight: bolder;
}
.content {
  margin-top: 10px;
  font-size: 12px;
}
.image {
  position: absolute;
  height: 100px;
  width: 100%;
  bottom: 0;
}
.pill {
  margin: 0;
  position: absolute;
  z-index: 100;
  width: 100%;
  text-align: left;
  top: 0;
  padding: 10px;
  color: black;
}